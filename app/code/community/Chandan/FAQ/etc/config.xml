<?xml version="1.0"?>
<config>
    <modules>
        <Chandan_FAQ>
            <version>1.0.0</version>
        </Chandan_FAQ>
    </modules>
    <frontend>
        <routers>
            <faq>
                <use>standard</use>
                <args>
                    <module>Chandan_FAQ</module>
                    <frontName>faq</frontName>
                </args>
            </faq>
        </routers>
        <layout>
            <updates>
                <faq>
                    <file>faq.xml</file>
                </faq>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<faq>
				<use>admin</use>
				<args>
					<module>Chandan_FAQ</module>
					<frontName>faq</frontName>
				</args>
			</faq>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<faq module="faq">
				<title>FAQ</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="faq">
						<title>Manage FAQ</title>
						<sort_order>0</sort_order>
						<action>faq/adminhtml_faq</action>
					</items>
				</children>
			</faq>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>	
					<children>				
						<faq module="faq">
							<title>FAQ</title>
							<sort_order>71</sort_order>               
							<children>
								<items module="faq">
									<title>Manage FAQ</title>
									<sort_order>0</sort_order>
									<action>faq/adminhtml_faq</action>
								</items>
							</children>
						</faq>

						<system>
							<children>
								<config>
									<children>
										<chandan_faq>
											<title>FAQ - All</title>
										</chandan_faq>
									</children>
								</config>
							</children>
						</system>	
					</children>						
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<faq>
					<file>faq.xml</file>
				</faq>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <faq>
                <class>Chandan_FAQ_Model</class>
                <resourceModel>faq_mysql4</resourceModel>
            </faq>
            <faq_mysql4>
                <class>Chandan_FAQ_Model_Mysql4</class>
                <entities>
                    <faq>
                        <table>faq</table>
                    </faq>
                </entities>
            </faq_mysql4>
        </models>
        <resources>
            <faq_setup>
                <setup>
                    <module>Chandan_FAQ</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </faq_setup>
            <faq_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </faq_write>
            <faq_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </faq_read>
        </resources>
        <blocks>
            <faq>
                <class>Chandan_FAQ_Block</class>
            </faq>
        </blocks>
        <helpers>
            <faq>
                <class>Chandan_FAQ_Helper</class>
            </faq>
        </helpers>
    </global>
</config>