<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
		<reference name="top.links">
            <action method="addLink" translate="Testimonial">
                <label>FAQ</label>
                <url>faq/index/</url>
                <title>FAQ</title>               
                <position>12</position>
            </action>
        </reference>
    </default>
    <faq_index_index>
		<reference name="head">				
			<action method="addItem"><type>skin_js</type><name>faq/js/bootstrap.min.js</name><params/></action>			
			<action method="addItem"><type>skin_css</type><name>faq/css/bootstrap.min.css</name><params/></action>
		</reference>
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
        <reference name="content">
            <block type="faq/faq" name="faq" template="faq/faq.phtml" />
        </reference>
    </faq_index_index>
</layout> 